@model Food_Management.Data.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>FoodGet</h1>
<br></br>
@using (Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{
    @Html.Label("Food ID")
    @Html.TextBoxFor(x => x.FoodID, new { @class = "form-control",@disabled="disabled"})
    @Html.HiddenFor(x => x.FoodID) <!-- Hidden input to submit the value -->
    <br></br>
    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br></br>
    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br></br>
  
    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br></br>
    @Html.Label("Image URL")
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })
    <br></br>
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br></br> 
    @Html.Label("Description")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br></br>
    <button class="btn btn-primary">Update Food</button>
}

